<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
@section Scripts {
    <script>
                const addToBasketBtns=document.querySelectorAll(".addToBasketBtn");
          const basketModalArea=document.querySelector(".basketModal");


          console.log(addToBasketBtns)
          console.log(basketModalArea)
          addToBasketBtns.forEach(btn=>{
        btn.addEventListener('click',async (e)=>{
                  e.preventDefault();

                  const response=await fetch(btn.href);
                  const basketModal=await response.text();

                  basketModalArea.innerHTML=basketModal;
              })
          })
    </script>
}